#!/usr/bin/env node

var requirejs = require( 'requirejs' ),
	path      = require( 'path' ),
	spellPath = path.resolve( process.mainModule.filename , '..' )

requirejs.config( {
	baseUrl: spellPath + '/src',
	nodeRequire: require
} )

requirejs(
	[
		'server/spellEdServer'
	],
	function(
		spellEdServer
	) {
		spellEdServer( process.argv, process.cwd(), spellPath )
	}
)
